[user]
  name = Tim Schneider
  email = timschneider.xyz@gmail.com

[init]
  defaultBranch = main

[core]
  editor = nvim

[alias]
  c = commit -m
  ca = commit --amend --no-edit
  ac = !git add . && git commit -m
  aca = !git add . && git commit --amend --no-edit
  undo = reset --soft HEAD~1
  ps = push
  pl = pull --rebase
  rc = rebase --continue
  s = stash
  sp = stash pop
  co = checkout
  cob = checkout -b
  bd = branch -d
  bdr = push --delete
  f = fetch --prune
  l = log --graph --pretty=format:'%C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr) %C(blue)<%an>%C(reset)'
  ll = log --oneline --graph --stat
