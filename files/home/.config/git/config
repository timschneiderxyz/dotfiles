[user]
  name = Tim Schneider
  email = timschneider.xyz@gmail.com

[init]
  defaultBranch = main

[core]
  editor = nvim
  preloadindex = true
  ignorecase = false

[advice]
  statusHints = false
  pushNonFastForward = false

[status]
  short = true
  branch = true
  showStash = true
  showUntrackedFiles = all

[push]
  autoSetupRemote = true

[pull]
  rebase = true

[rebase]
  autoStash = true

[alias]
  c = commit -m
  ca = commit --amend --no-edit
  ac = !git add . && git commit -m
  aca = !git add . && git commit --amend --no-edit
  undo = reset --soft HEAD~1
  ps = push
  pl = pull
  rc = rebase --continue
  s = stash
  sp = stash pop
  co = checkout
  cob = checkout -b
  bd = branch -d
  bdr = push --delete
  f = fetch --prune
  ls = log --graph --all --pretty=format:'%C(magenta)%h %C(white)- %s%C(yellow)%d %C(green)(%cr) %C(blue)<%an>%n'
  ll = log --graph --pretty=format:'%C(magenta)%h %C(white)- %s%C(yellow)%d %C(green)(%cr) %C(blue)<%an>%n' --stat

[url "git@github.com:"]
  insteadOf = "gh:"
